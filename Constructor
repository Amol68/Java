package sea;

public class Car {

	String brand;
	String model;
	int mile;
	
	 Car()
	{
		System.out.println("");
	}
	
	
	  Car(String brand, String model, int mile)
	{
	  this.brand=brand;
	  this.model=model;
	  this.mile=mile;
	  
	  System.out.println("Car Details:");
	  System.out.println("Company:" +brand+
			              "\nModel:" + model +
			              "\nMile:" +mile );
	}
	  
	  public static void main(String[] args)
	  {
		  Car c1 = new Car("Honda","Amaze", 12);
	  }
	}
	


 
